<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--读取mybatis参数 自己加载对应的驱动-->
    <classPathEntry location="F:\IDEA_WorkSpace\otwb\otwb-dao\src\test\resources\generator\mysql-connector-java-5.1.46.jar"/>

    <context id="MySQL" defaultModelType="flat" targetRuntime="MyBatis3Simple">
        <property name="javaFileEncoding" value="UTF-8"/>

        <!--配置是否使用通用 Mapper 自带的注释扩展，默认 true-->
        <!--<property name="useMapperCommentGenerator" value="false"/>-->

        <!--通用 Mapper 插件，可以生成带注解的实体类-->
        <plugin type="MyBatisPlugin">
            <property name="mappers" value="com.yogurt.dao.config.DefaultMySqlMapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="beginningDelimiter" value="`"/>
            <property name="endingDelimiter" value="`"/>
        </plugin>

        <!--数据库链接配置-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/test?characterEncoding=UTF-8" userId="root" password="root"/>

        <!--生成Model的包名和位置-->
        <javaModelGenerator targetPackage="com.yogurt.model.entity.base" targetProject="generator">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
            <property name="rootClass" value="com.yogurt.model.entity.BaseModel"/>
        </javaModelGenerator>

        <!-- 生成sql xml的包名和位置 -->
        <sqlMapGenerator targetPackage="com.yogurt.xml" targetProject="generator">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成mapper的包名和位置 ANNOTATEDMAPPER 或者XMLMAPPER-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.yogurt.dao.mapper.base" targetProject="generator">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 要生成哪些表 %表示所有 可以指定单表-->
        <table tableName="DEV_%">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="SELECT REPLACE(UUID(),''-'','''') UUID FROM DUAL"/>
            <!--oracle 配置-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
            <!--所有表DEV_开头的全部去除前缀-->
            <domainObjectRenamingRule searchString="^(DEV|dev)" replaceString="" />
            <!--所有列DEV_开头的全部去除前缀-->
            <columnRenamingRule searchString="^(DEV|dev)" replaceString="" />
        </table>
    </context>
</generatorConfiguration>